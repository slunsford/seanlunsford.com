<article class="post">
    <header class="post-header">
        {% if post.data.featured_image -%}
        <img src="{{ post.data.featured_image }}" alt="{{ post.data.featured_image_alt }}" />
        {%- endif %}
        <h1 class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
        <section class="post-meta">
            <time class="post-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        </section>
    </header>
    <section class="post-content">
        {{ post.content | safe }}
    </section>
</article>
